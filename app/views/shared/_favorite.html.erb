<% if restaurant.is_favorited?(current_user) %>
  <%= link_to "Unfavorite", unfavorite_restaurant_path(restaurant), method: :post, data: { disable_with: "Please wait..." }, class: "btn btn-info" %>
<% else %>
  <%= link_to "Favorite", favorite_restaurant_path(restaurant), method: :post, data: { disable_with: "Please wait..." }, class: "btn btn-primary" %>
<% end %>
