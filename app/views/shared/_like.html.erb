<% if restaurant.is_liked?(current_user) %>
  <%= link_to "Unlike", unlike_restaurant_path(restaurant),  method: :post, data: { disable_with: "Please wait..." },class: "btn btn-info" %>
<% else %>
  <%= link_to "Like", like_restaurant_path(restaurant),  method: :post, data: { disable_with: "Please wait..." },class: "btn btn-primary" %>
<% end %>
