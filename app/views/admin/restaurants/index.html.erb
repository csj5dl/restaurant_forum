<h1>餐廳後台</h1>
<%= link_to 'New Restaurant', new_admin_restaurant_path() %>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <%= restaurant.name %>
    <%= link_to 'Show', admin_restaurant_path(restaurant) %>
    <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
    <%= link_to 'Delete', admin_restaurant_path(restaurant),  method: :delete, date: {confirm: "Are you sure?"}%>
  </li>
  <% end %>
</ul>
