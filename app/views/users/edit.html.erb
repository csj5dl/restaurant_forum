<div class="container">
  <div class="row">
    <h1>Edit Profile</h1>

    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :intro, "自我介紹" %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "大頭照上傳" %>
        <%= image_tag @user.avatar, class: "img-responsive img-rounded", width: "100px" if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", :back , class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
